<Page x:Class="MinecraftLWPF.pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Dashboard" Height="450" Width="800"
       Loaded="Dashboard_OnLoaded">
    <Page.DataContext>
        <Binding Source="{StaticResource MinecraftModel}" />
    </Page.DataContext>
    <StackPanel Orientation="Horizontal">
        <ListBox ItemsSource="{Binding FilteredVersions}" BorderBrush="Black">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox Content="Release" Click="Checkboxes_OnClick" IsChecked="{Binding Filter.Release}" />
        <CheckBox Content="Snapshot" Click="Checkboxes_OnClick" IsChecked="{Binding Filter.Snapshot}" />
        <CheckBox Content="Beta" Click="Checkboxes_OnClick" IsChecked="{Binding Filter.Beta}" />
        <CheckBox Content="Alpha" Click="Checkboxes_OnClick" IsChecked="{Binding Filter.Alpha}" />
    </StackPanel>
    
    
</Page>